<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayoutResultado">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:id="@+id/tituloRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:text="Titulo"
                android:textSize="18sp"
                android:textColor="@color/azulescuro"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/autorRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor"
                android:textSize="12sp"
                android:textColor="@color/cinza"
                app:layout_constraintStart_toStartOf="@+id/tituloRes"
                app:layout_constraintTop_toBottomOf="@+id/tituloRes" />

            <TextView
                android:id="@+id/resumoRes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resumo"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/autorRes"
                app:layout_constraintTop_toBottomOf="@+id/autorRes" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>